<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="8dp"
    android:background="@drawable/border"
    android:layout_marginHorizontal="10dp"
    android:layout_marginTop="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:padding="10dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">


            <ImageView
                android:id="@+id/phone_main_image"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="5dp"
                android:src="@drawable/ic_home"
                android:clickable="false"
                android:focusable="false"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="2.5"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/phone_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mobiwire Hinto 4G Feature Phone"
                    style="@style/CardViewTitle"/>

                <TextView
                    android:id="@+id/phone_subtitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="128MB Black"
                    style="@style/CardViewSubtitle"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:paddingVertical="5dp"
                android:orientation="vertical"
                android:gravity="end">

                <TextView
                    android:id="@+id/phone_price"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:text="$47.99"
                    style="@style/CardViewTitle" />
                <Button
                    android:id="@+id/remove_from_cart_button"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:text="Ã—"
                    android:textSize="30sp"
                    android:background="?android:attr/selectableItemBackground" />
            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>