<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="HorizontalDivider" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:layout_marginHorizontal">0dp</item>
        <item name="android:layout_marginVertical">20dp</item>
        <item name="android:background">#aaa</item>
    </style>

<!--    Categories-->

    <!--    Android-->
    <style name="CategoryButtonAndroid" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_centerHorizontal">true</item>

        <!--        See res/drawable/android_logo.xml-->
        <item name="android:background">@drawable/android_logo</item>
    </style>

    <!--    IOS-->
    <style name="CategoryButtonIOS" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_centerHorizontal">true</item>

<!--        See res/drawable/ios_logo.xml-->
        <item name="android:background">@drawable/ios_logo</item>
    </style>

    <!--    Other-->
    <style name="CategoryButtonOther" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_centerHorizontal">true</item>

        <!--        See res/drawable/windows_logo.xml-->
        <item name="android:background">@drawable/windows_logo</item>
    </style>

    <style name="CategoryTitle" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textSize">24dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
    </style>

    <style name="CategoryContainer" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!--    Text in CardViews in Search Activity style-->
    <style name="CardViewTextViewStyle" parent="android:Widget.TextView">
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
    </style>
</resources>