<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="HorizontalDivider" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:background">#aaa</item>
    </style>

    <style name="BottomNavigationBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/menu_background_top_border</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="menu">@menu/bottom_menu</item>
        <item name="itemTextColor">@drawable/selector</item>
        <item name="itemIconTint">@drawable/selector</item>
    </style>

<!--    Categories-->

    <!--    Android-->
    <style name="CategoryButton" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">67dp</item>
        <item name="android:layout_height">67dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginBottom">7dp</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>


    <style name="CategoryButtonAndroid" parent="CategoryButton">
        <item name="android:background">@drawable/android_logo</item>
    </style>

    <!--    IOS-->
    <style name="CategoryButtonIOS" parent="CategoryButton">
        <item name="android:background">@drawable/ios_logo</item>
    </style>

    <!--    Other-->
    <style name="CategoryButtonOther" parent="CategoryButton">
        <item name="android:background">@drawable/other_category_icon</item>
    </style>

    <style name="CategoryTitle" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
    </style>

    <style name="CategoryContainer" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!--    Text in CardViews in Search Activity style-->
    <style name="CardViewTitle" parent="android:Widget.TextView">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#676464</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
    </style>
    <style name="CardViewTitle2" parent="android:Widget.TextView">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#676464</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
    </style>
    <style name="CardViewSubtitle" parent="android:Widget.TextView">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#676464</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
    </style>

    <!--    Details Activity styles-->
    <style name="SpecContainer" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingHorizontal">10dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="SpecTitle" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:layout_marginBottom">3dip</item>
        <item name="android:layout_marginTop">3dip</item>
    </style>

    <style name="SpecValue" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingHorizontal">10dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/lato_regular</item>
    </style>

    <style name="DetailsButtonPrimary">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingHorizontal">10dp</item>
        <item name="android:background">@drawable/button_primary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/lato_bold</item>
    </style>

    <style name="DetailsButtonSecondary">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingHorizontal">10dp</item>
        <item name="android:background">@drawable/button_secondary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/brand_primary</item>
        <item name="android:fontFamily">@font/lato_bold</item>
    </style>

    <!--    Comparison Activity styles-->

    <style name="ComparisonPhoneContainer">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="ComparisonPhoneImage">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">150dp</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="ComparisonPhoneTextContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">90dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ComparisonPhoneTitle" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/lato_regular</item>
    </style>
    <style name="ComparisonPhoneSubtitle" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/lato_regular</item>
    </style>

    <!-- Styles for main activity news section-->
    <style name="NewsContainer" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">30dp</item>
        <item name="android:paddingRight">30dp</item>
    </style>

    <style name="NewsCaption" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/lato_regular</item>

    </style>

    <!-- Action bar -->
    <style name="ActionBarContainer" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="ActionBarTitle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/montserrat_regular</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="backButton" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">27dp</item>
        <item name="android:layout_height">27dp</item>
        <item name="android:layout_gravity">left|center_vertical</item>
    </style>
</resources>